<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">


    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textColor="#2196F3"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="493dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="#BA2C2C"
        android:text="I agree"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="544dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please, enter your name:"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="434dp" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToggleButton"
        android:textAllCaps="true"
        android:textColor="#F44336"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="547dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00BCD4"
        android:backgroundTint="#1AAEA0"
        android:text="Sign in"
        android:textStyle="bold"
        app:icon="@color/teal_200"
        app:iconTint="#C9DA20"
        app:rippleColor="#9C27B0"
        app:strokeColor="#14CF1C"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="617dp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dark theme"

        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="684dp" />

</LinearLayout>